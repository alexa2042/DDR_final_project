### Gameplay Keys ###
def onKeyPress(Keys):
    if (Keys == 'space'):
        title.clear()
        begin.visible = True
        app.level = 1
    if (Keys == 'p'):
        if (app.paused == False):
            app.paused = True
        else:
            app.paused = False 
    if (Keys == 'left'):
        leftTarget.dy = 0
        
        # left arrow detection
        if (leftArrow.containsShape(leftTarget) == True):
            app.score += 1
            leftTarget.visible = False
        else:
            leftTarget.visible = False
            app.score -= 1
        # update score label
        label.value = "SCORE:" + str(app.score)
    if (Keys == 'up'):
        upTarget.dy = 0
        if (upArrow.containsShape(upTarget) == True):
            app.score += 1
            upTarget.visible = False
        else:
            upTarget.visible = False
            app.score -= 1
        label.value = "SCORE:" + str(app.score)
    if (Keys == 'down'):
        downTarget.dy = 0
        if (downArrow.containsShape(downTarget) == True):
            app.score += 1
            downTarget.visible = False
        else:
            downTarget.visible = False
            app.score -= 1
        label.value = "SCORE:" + str(app.score)
    if (Keys == 'right'):
        rightTarget.dy = 0
        if (rightArrow.containsShape(rightTarget) == True):
            app.score += 1
            rightTarget.visible = False
        else:
            rightTarget.visible = True
            app.score -= 1
        label.value = "SCORE:" + str(app.score)

# screens when game runs
def onStep():
    if (app.level == 0):
        # title screen
            title.visible = True
            begin.visible = False
        
    elif (app.level == 1):
        # arrows display one after the other
        label.visible = True
        if (app.patternInPlay == True):
            
            leftTarget.y1 -= 2
            leftTarget.y2 -= 2
            if (leftTarget.visible == False):
                downTarget.y1 -= 2 
                downTarget.y2 -= 2
                if (downTarget.visible == False):
                    upTarget.y1 -= 2
                    upTarget.y2 -= 2
                    if (upTarget.visible == False):
                        perfect.visible = False
                        miss.visible = False
                        rightTarget.y1 -= 2
                        rightTarget.y2 -= 2 
          
        #causes label to dissapear 
        if (begin.opacity > 2):
            begin.opacity -= 5
        else:
            begin.visible = False
            app.patternInPlay = True
        if (rightTarget.visible == False):
            app.level = 2
    #ending screen
    elif (app.level == 2):
        if (app.score == 4):
            winner.visible = True
        else: 
            loser.visible = True
  
   


